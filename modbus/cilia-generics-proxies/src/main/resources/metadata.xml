<ipojo>
	<!-- Proxy Importer for 'Devices' -->
	<component classname="fr.liglab.adele.cilia.proxies.rose.ProxyDeviceImporter"
		name="Cilia_Importer.device">
		<provides specifications="org.ow2.chameleon.rose.ImporterService">
			<property type="java.lang.String[]" name="endpoint.config"
				value="{tcp.ip}" />
		</provides>		
		<requires field="roseMachine" id = "rose.machine"/>
		<callback transition="validate" method="start" />
		<callback transition="invalidate" method="stop" />
	</component>

	<component classname="fr.liglab.adele.cilia.proxies.rose.CiliaProxiesConfigurator"
		name="Cilia_RoseProxies.configurator">
		<callback transition="validate" method="start" />
		<callback transition="invalidate" method="stop" />
	</component>
    <instance component="Cilia_RoseProxies.configurator"/>
	
</ipojo>
