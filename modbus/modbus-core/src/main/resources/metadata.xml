<ipojo>

	<!-- Modbus/TCP Protocol Schneider = (Modbus + identification) -->
	<component classname="fr.liglab.adele.protocol.impl.modbus.ModbusProtocolImpl"
		name="modbus.TCP" immediate="true" architecture="true" >
		<provides specification="fr.liglab.adele.protocol.modbus.ModbusProtocol">
			<property name="fca.injected" field="m_fca" type="java.lang.String" />
			<property name="domain.id" type="java.lang.String" field="m_domain"/>
		</provides>
		<properties propagation="true">
			<property name="fca.injected" field="m_fca" type="java.lang.String" value="false " />
			<property name="fca.attributes" field="m_attributes" type="java.util.HashSet" />
			<property name="domain.id" type="java.lang.String" field="m_domain"/>
			<property name="device.ip.address" method="setHost" type="java.lang.String"
				mandatory="true" />
			<property name="rank.value" type="java.lang.String" field="m_rank" />
 			<property name="device.ip.port" method="setPort" value="502" />
			<property name="device.identification" method="setIdentification"
				type="java.util.Map" />
		</properties>
		<callback transition="validate" method="start" />
		<callback transition="invalidate" method="stop" />
	</component>

</ipojo>