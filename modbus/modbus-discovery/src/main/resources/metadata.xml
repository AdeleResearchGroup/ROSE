<?xml version="1.0" encoding="UTF-8"?>

<ipojo>

	<!-- Component Modbus/TCP Scanner -->
	<component classname="fr.liglab.adele.discovery.impl.modbus.ModbusTCPScanner"
		name="modbus.tcp.ip.scanner">
		<properties>
			<property name="start.address" type="java.lang.String"
				method="setStartAddress" mandatory="true" />
			<property name="end.address" type="java.lang.String" method="setEndAddress"
				mandatory="true" />
			<property name="domain.id" field="m_domainID" type="java.lang.String" />
			<property name="scan.period" type="java.lang.String" field="m_period"
				value="1000" />
			<property name="scan.delay" field="m_delay" value="100" />
			<property name="ping.time.out" field="m_timeout" value="2000" />
			<property name="modbus.port.number" field="m_port" value="502" />
		</properties>
		<requires field="roseMachine" />
		<requires field="adminService" />
		<callback transition="validate" method="runScan" />
		<callback transition="invalidate" method="cancelScan" />
	</component>

</ipojo>
